{
  "datacenter": "my-dc-1",
  "data_dir": "/opt/consul",
  "bind_addr": "0.0.0.0",
  "advertise_addr": "consul_Agent",
  "encrypt": "encrypt_Server",
  "retry_join": [
    "consul_Server1",
    "consul_Server2",
    "consul_Server3"
